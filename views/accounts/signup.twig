
{% extends 'layout.twig' %}

{% block namepage %}
    Sistema de registro de perfiles 
{% endblock %}

{% block title %}
    SRPPFG
{% endblock %}

{% block csslink %}
    <link rel='stylesheet' href='../public/assets/css/background1.css'>
    <link rel='stylesheet' href='../public/assets/css/app.css'>

    <link rel='stylesheet' href='../public/assets/alertifyjs/css/alertify.min.css'>
    <link rel='stylesheet' href='../public/assets/alertifyjs/css/themes/default.min.css'>
{% endblock %}
{% block menu %}
{% endblock %}

{% block content %}
    <article id="main">
        <header style="padding-top: 50px; padding-bottom: 50px;" >
            <h2>SRPPFG</h2>
            <p>Bienvenido a la plataforma de Registro de Perfiles de la UMSS. </p>
        </header>
        <section class="wrapper style5">
            <div class="inner">
                <section>
                    <h4 style="text-align: center;">Registro de usuario</h4>
                    <div class="wrapper-form">
                            <div class="message-box">
                                    {% include 'remnant/errors.twig' %}
                                    {% include 'remnant/warning.twig' %}
                            </div>
                        <form method="post" onsubmit="return validateFormSignup()">
                            <div class="row uniform">
                               <div class="6u 12u$(xsmall)">
                                    <label>Nombre completo</label>
                                    <input type="text" name="name" id="name" value="{{user.name}}" placeholder="Nombre completo" onkeyup="formatLetters(this)" onchange="formatLetters(this)"/>
                                </div>

                                <div class="3u 12u$(xsmall)">
                                    <label>Apellido paterno</label>
                                    <input type="text" name="lname" id="lname" value="{{user.l_name}}" placeholder="Apellido paterno" onkeyup="formatLetters(this)" onchange="formatLetters(this)"/>
                                </div>
                                <div class="3u$ 12u$(xsmall)">
                                    <label>Apellido materno</label>
                                    <input type="text" name="mlname" id="mlname" value="{{user.ml_name}}" placeholder="Apellido materno" onkeyup="formatLetters(this)" onchange="formatLetters(this)"/>
                                </div>
                                <div class="3u 12u$(xsmall)">
                                    <label>Código SIS</label>
                                    <input type="text" name="codsis" id="codsis" value="{{user.cod_sis}}" placeholder="Código SIS" onkeyup="formatNum(this)" onchange="formatNum(this)"/>
                                </div>
                                <div class="3u 12u$(xsmall)">
                                    <label>CI</label>
                                    <input type="text" name="ci" id="ci" value="{{user.ci}}" placeholder="Identificación personal" onkeyup="formatNum(this)" onchange="formatNum(this)"/>
                                </div>
                                <div class="6u$ 12u$(xsmall)">
                                    <label>Email</label>
                                    <input type="text" name="email" id="email" value="{{user.email}}" placeholder="Email" />
                                </div>

                                {# <div class="3u$ 12u$(xsmall)">
                                    <label>Tipo de usuario</label>
                                    <select name="tuser">
                                        <option value="" disabled selected>- Seleccionar -</option>
                                        <option value="1">Profesional UMSS</option>
                                        <option value="2">Profesional Externo</option>
                                        <option value="3">Postulante</option>
                                    </select>    
                                </div> #}

                                <div class="4u 12u$(xsmall)">
                                    <label>Nombre de usuario</label>
                                    <input type="text" name="user" id="user" value="{{user.user}}" placeholder="Usuario" />
                                </div>

                                <div class="4u 12u$(xsmall)">
                                    <label>Contraseña</label>
                                    <input type="password" name="pwd" id="pwd" placeholder="Contraseña" />
                                </div>
                                <div class="4u$ 12u$(xsmall)">
                                    <label>Confirmar contraseña</label>
                                    <input type="password" name="pwdc" id="pwdc"  placeholder="Confirme la contraseña" />
                                </div>
                            </div>
                            <br>
                            <div class="12u 12u$(xsmall)">
                                <ul class="actions" style="text-align: center">
                                    <li><button class="principal" type="submit">Registrarse</button>
                                    </li>
                                </ul>
                            </div>
                            <div class="row">
                                <div class="signup-box">
                                    <p>¿Ya tiene una cuenta? <a href="{{ '' | url }}">Ingresar.</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </section>
    </article>
{% endblock %}

{% block jslink %}
    <script src='../public/assets/js/jquery.min.js'></script>
    <script src='../public/assets/js/jquery.scrollex.min.js'></script>
    <script src='../public/assets/js/jquery.scrolly.min.js'></script>
    <script src='../public/assets/js/skel.min.js'></script>
    <script src='../public/assets/js/util.js'></script>
    <script src='../public/assets/js/main.js'></script>

    <script src='../public/assets/js/jquery-3.3.1.min.js'></script>
    <script src='../public/assets/alertifyjs/alertify.min.js'></script>
    <script src='../public/assets/alertifyjs/validation.js'></script>
{% endblock %}
