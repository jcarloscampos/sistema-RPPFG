
{% extends 'layout.twig' %}

{% block namepage %}
    Sistema de registro de perfiles 
{% endblock %}

{% block title %}
    SRPPFG
{% endblock %}

{% block csslink %}
    <link rel='stylesheet' href='../public/assets/css/background1.css'>
    <link rel='stylesheet' href='../public/assets/css/app.css'>
{% endblock %}
{% block menu %}
    <nav id="nav">
        <ul>
            <li class="special">
                <a href="#menu" class="menuToggle"><span>Menu</span></a>
                <div id="menu">
                    <ul>
                        <li>SRPPFG</li>
                    </ul>
                </div>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block content %}
    <article id="main">
        <header style="padding-top: 50px; padding-bottom: 50px;" >
            <h2>SRPPFG</h2>
            <p>Bienvenido a la plataforma de Registro de Perfiles de la UMSS. </p>
        </header>
        <section class="wrapper style5">
            <form method="post" action="#">
                <div class="6u 12u$(xsmall)">
                <label>Correo</label>
                <input type="text" name="name" id="name" value="{{user.name}}" placeholder="" />
                <button class="principal" type="submit">Enviar correo</button> 
             </div>
             </form>
        </section>
    </article>
{% endblock %}

{% block jslink %}
    <script src='../public/assets/js/jquery.min.js'></script>
    <script src='../public/assets/js/jquery.scrollex.min.js'></script>
    <script src='../public/assets/js/jquery.scrolly.min.js'></script>
    <script src='../public/assets/js/skel.min.js'></script>
    <script src='../public/assets/js/util.js'></script>
    <script src='../public/assets/js/main.js'></script>
{% endblock %}
