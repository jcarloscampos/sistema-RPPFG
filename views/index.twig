    <link rel='stylesheet' href='../public/assets/alertifyjs/css/themes/default.min.css'>
{% endblock %}
{% block menu %}
    <nav id="nav">
        <div class="box-search">
            <div class="nav-way" style="margin-top: 0em;">
                <p><a class=".btn .btn-primary" href="{{'searches' | url }}">Averigua más</a></p>
            </div>
            {# <div class="search-projects">
                <p style="margin-top: .25em;padding-right: 1em;"><a style="padding: .5em;border: solid 1px #2a6fa8;border-radius: 5px;text-decoration: none;background: rgba(51,148,226, .5);color: white;" href="{{ 'searches' | url }}">Averigua más</a></p>
